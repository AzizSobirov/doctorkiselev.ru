---
import { faqs } from "@/store";
import { Section, H2, H3, P, Image, Icon, Button } from "ui";
---

<!-- Faq -->
<Section name="faq">
  <H2 class="uppercase" data-aos="fade-up"
    >ОТВЕЧАЕМ <strong>на ВАШИ ВОПРОСЫ</strong></H2
  >

  <ul class="faq__list">
    {
      faqs.map((faq, index) => (
        <li
          class="faq__item row"
          data-aos="fade-up"
          data-aos-delay={index * 50}
          role="button"
          data-fancybox="faq"
          data-src="/assets/videos/hero.mp4"
        >
          <Image class="hidden" src="doctor.png" />
          <Icon src="play-solid.svg" />
          <span>{faq}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style lang="scss" is:global>
  @use "scss/helpers" as *;

  .faq {
    position: relative;

    &__list {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(rem(350), 1fr));
      gap: rem(40) rem(20);

      @include media("3xl") {
        gap: rem(30) rem(20);
      }
      @include media("xs") {
        grid-template-columns: 1fr;
        gap: rem(15);
      }
    }

    &__item {
      padding: rem(20);
      width: 100%;
      background: #fff;
      border-radius: rem(35);
      gap: rem(25);
      --icon-size: #{rem(42)};

      @include media("sm") {
        padding: rem(15);
        border-radius: rem(20);
        gap: rem(15);
        --icon-size: #{rem(32)};
      }
    }
  }
</style>
