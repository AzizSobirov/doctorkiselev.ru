  .causes {
    position: relative;

    .text-h3 {
      color: inherit;
      font-weight: inherit;

      strong {
        color: var(--primary);
      }
    }

    &__list {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(rem(380), 1fr));
      gap: rem(40) rem(20);

      @include media("sm") {
        grid-template-columns: 1fr;
        gap: rem(15);
      }

