---
import { Section, H2, H3, P, Image, Icon, Button } from "ui";

interface Props {
  title?: string;
  subtitle?: string;
  list?: string[];
}

const { title, subtitle, list } = Astro.props as Props;
---

<!-- Causes -->
<Section name="causes">
  {title && <H2 class="uppercase" data-aos="fade-up" set:html={title} />}
  {subtitle && <H3 data-aos="fade-up" set:html={subtitle} />}

  <ul class="causes__list">
    {
      list &&
        list.map((item, index) => (
          <li data-aos="fade-up" data-aos-delay={index * 50} set:html={item} />
        ))
    }
  </ul>
</Section>

